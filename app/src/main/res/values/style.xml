<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="estilo_titulo">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">35dp</item>
        <item name="android:gravity">clip_horizontal|clip_vertical</item>
    </style>

    <style name="imageDetailStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="estilo_titulo_descripcion">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="estilo_descripcion">
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@string/material_motion_easing_linear</item>
    </style>

    <style name="estilo_habilidades">
        <item name="android:textColor">@color/marron</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="fontFamily">@string/material_motion_easing_linear</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="estilo_boton">
        <item name="backgroundTint">@color/cream</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:text">@string/boton_volver</item>
        <item name="android:textSize">20sp</item>

    </style>

</resources>